<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Recipes</title>
  </head>
  <body>
    <div class="main-container">
        <%- include('../partials/_navbar.ejs') %>

        <h2>Welcome to My Recipes</h2>
        <a href="/recipes/new">Add New Recipe</a>
        <%if(recipes.length === 0) {%>
            <p>You have not created any recipes yet</p>
        <%}else{%>
            <ul>
                <%recipes.forEach((recipe) =>{%>
                    <li>
                        <div class="all-recipe-container">
                            <div>    
                                <a href="/recipes/<%=recipe._id%>"> <%=recipe.name%></a>
                            </div>
                            <div class="actions"> 
                                <a href="/recipes/<%=recipe._id%>/edit">Edit Recipe</a>
                                <form action="/recipes/<%=recipe._id%>?_method=DELETE" method="POST">
                                <button class="delete" type="submit">Delete Recipe</button>
                            </form>
                            </div>
                        </div>
                    </li>  
                <%})%>
            </ul>  
        <%}%>  
            
    </div>
  </body>
</html>
